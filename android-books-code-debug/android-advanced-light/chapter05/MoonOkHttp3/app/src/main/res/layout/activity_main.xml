<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <Button
        android:id="@+id/bt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get请求"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
       />
    <Button
        android:id="@+id/bt_send_for_ngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get请求 getAsynForEngine"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"

        />
    <Button
        android:id="@+id/bt_postsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post请求"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
        />
    <Button
        android:id="@+id/bt_sendfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送文件"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
        />
    <Button
        android:id="@+id/bt_sendfile_sendMultipart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送文件sendMultipart"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/bt_downfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载文件"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
        />
    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消请求"
        android:textAllCaps="false"
        tools:ignore="HardcodedText"
        />
</LinearLayout>
</RelativeLayout>
