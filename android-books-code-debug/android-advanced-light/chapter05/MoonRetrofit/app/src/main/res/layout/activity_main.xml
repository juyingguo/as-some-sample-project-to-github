<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liuwangshu.moonretrofit.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_request"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="请求网络"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="getIpInformationForJson"
            android:onClick="clickGetIpInformationForJson"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="getIpInformationForQuery"
            android:onClick="clickGetIpInformationForQuery"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="getIpInformationForQueryMap"
            android:onClick="clickGetIpInformationForQueryMap"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="getIpInformationForPath"
            android:onClick="clickGetIpInformationForPath"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="postIpInformationByIp"
            android:onClick="clickPostIpInformationByIp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="postIpInformationForBody"
            android:onClick="clickPostIpInformationForBody"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>
